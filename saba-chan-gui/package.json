{
  "name": "saba-chan-gui",
  "version": "0.1.0",
  "description": "Saba-chan - Modular Game Server Management GUI",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron-start": "wait-on http://localhost:5173 && electron .",
    "start": "concurrently --kill-others --raw \"npm run dev\" \"npm run electron-start\"",
    "package": "npm run build && electron-builder",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint ./src ./main.js",
    "lint:fix": "biome lint --write ./src ./main.js",
    "format": "biome format --write ./src ./main.js",
    "check": "biome check ./src ./main.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "clsx": "^2.1.1",
    "i18next": "^25.8.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-error-boundary": "^6.1.1",
    "react-i18next": "^16.5.4",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "jsdom": "^25.0.1",
    "terser": "^5.46.0",
    "vite": "^6.0.7",
    "vitest": "^2.1.8",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.saba-chan.app",
    "productName": "Saba-chan",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,*.map,test,tests,coverage,*.ts,*.d.ts,*.test.js,*.spec.js}",
      "!**/node_modules/**/*.{md,map,test.js,spec.js}",
      "!**/node_modules/.bin",
      "!build/**/*.{map,test.js,spec.js}"
    ],
    "extraFiles": [
      {
        "from": "../target/release/saba-core.exe",
        "to": "."
      },
      {
        "from": "../target/release/saba-chan-updater.exe",
        "to": "."
      },
      {
        "from": "../config",
        "to": "config"
      },
      {
        "from": "../locales",
        "to": "locales"
      },
      {
        "from": "../discord_bot",
        "to": "discord_bot",
        "filter": [
          "**/*",
          "!node_modules/**/{*.map,*.d.ts,*.ts,test,tests,coverage,CHANGELOG.md,README.md,LICENSE,AUTHORS}",
          "!node_modules/**/{package.json.orig,npm-shrinkwrap.json,yarn.lock}",
          "!node_modules/.bin/**",
          "!node_modules/.package-lock.json",
          "!.git",
          "!.github",
          "!.eslintrc*",
          "!.prettierrc*",
          "!.env",
          "!.env.example",
          "!test/**",
          "!*.test.js",
          "!*.spec.js"
        ]
      }
    ],
    "extraResources": [],
    "electronLanguages": [
      "en-US"
    ],
    "compression": "normal",
    "asar": true,
    "asarUnpack": [],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "certificateFile": null,
      "certificatePassword": null
    },
    "portable": {
      "artifactName": "${productName}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
