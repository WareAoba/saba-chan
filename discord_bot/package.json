{
  "name": "discord-bot",
  "version": "0.1.0",
  "description": "Discord Bot for game server management",
  "main": "index.js",
  "bin": "./index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "pkg . --targets node20-win-x64 --output discord-bot.exe --compress Brotli"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "discord.js": "^14.0.0",
    "dotenv": "^16.0.0",
    "i18next": "^25.8.4"
  },
  "optionalDependencies": {},
  "devDependencies": {
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "pkg": "^5.8.0"
  },
  "pkg": {
    "targets": [
      "node20-win-x64"
    ],
    "outputPath": "dist",
    "scripts": [
      "index.js"
    ],
    "assets": [
      "bot-config.json",
      "i18n.js",
      "utils/**/*",
      "extensions/**/*"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "utils/**/*.js",
      "index.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/test/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
