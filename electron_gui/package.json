{
  "name": "saba-chan-gui",
  "version": "0.1.0",
  "description": "Saba-chan - Modular Game Server Management GUI",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron-start": "wait-on http://localhost:5173 && electron .",
    "start": "concurrently --kill-others --raw \"npm run dev\" \"npm run electron-start\"",
    "package": "npm run build && electron-builder",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@fluentui/react-icons": "^2.0.316",
    "axios": "^1.4.0",
    "i18next": "^25.8.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-i18next": "^16.5.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "jsdom": "^25.0.1",
    "vite": "^6.0.7",
    "vitest": "^2.1.8",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.saba-chan.app",
    "productName": "Saba-chan",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraFiles": [
      {
        "from": "bin",
        "to": "bin"
      }
    ],
    "extraResources": [
      {
        "from": "../modules",
        "to": "modules"
      },
      {
        "from": "../instances.json",
        "to": "instances.json"
      },
      {
        "from": "../discord_bot",
        "to": "discord_bot",
        "filter": [
          "**/*",
          "!.env",
          "!test/**/*"
        ]
      }
    ],
    "asarUnpack": [
      "bin/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "public/icon.png"
    }
  }
}
